<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_image"

        app:layout_constraintHorizontal_chainStyle="spread_inside"

        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/player_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_name_ph"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@id/item_list_player_delete_button"
        app:layout_constraintTop_toTopOf="@id/player_image"
        app:layout_constraintBottom_toBottomOf="@id/player_image"
        app:layout_constraintStart_toEndOf="@id/player_image"


        />
    <ImageButton
        android:id="@+id/item_list_player_delete_button"
        android:layout_width="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/player_image"
        app:layout_constraintBottom_toBottomOf="@id/player_image"



        />

</androidx.constraintlayout.widget.ConstraintLayout>